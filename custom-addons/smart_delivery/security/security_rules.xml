<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Record Rules for Smart Delivery Module -->
    
    <!-- ============================================================ -->
    <!-- DELIVERY ORDER RULES -->
    <!-- ============================================================ -->
    
    <!-- Admin: Full access to all orders -->
    <record id="rule_delivery_order_admin" model="ir.rule">
        <field name="name">Delivery Order: Admin Full Access</field>
        <field name="model_id" ref="model_delivery_order"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('smart_delivery.group_admin'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    
    <!-- Enterprise: Access only orders where sender_id.id is in user's partner or parent company -->
    <record id="rule_delivery_order_enterprise" model="ir.rule">
        <field name="name">Delivery Order: Enterprise Own Company</field>
        <field name="model_id" ref="model_delivery_order"/>
        <field name="domain_force">[
            '|',
            ('sender_id', '=', user.partner_id.id),
            '|',
            ('sender_id', '=', user.partner_id.commercial_partner_id.id),
            ('sender_id.parent_id', '=', user.partner_id.commercial_partner_id.id)
        ]</field>
        <field name="groups" eval="[(4, ref('smart_delivery.group_enterprise'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
